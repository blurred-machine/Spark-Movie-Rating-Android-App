<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/blue_500" />
            <gradient android:angle="-90" android:startColor="@color/indigo_500" android:endColor="@color/blue_500"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/indigo_500" />
            <solid android:color="@color/blue_500"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/indigo_500" />
            <gradient android:angle="-90" android:startColor="@color/blue_500" android:endColor="@color/indigo_500" />
        </shape>
    </item>
</selector>